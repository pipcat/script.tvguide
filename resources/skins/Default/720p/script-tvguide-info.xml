<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">6001</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>tvguide-info-background.png</texture>
        </control>

            <control type="label" id="6001">
                <description>Program title</description>
                <posx>20</posx>
                <posy>60</posy>
                <width>1240</width>
                <height>50</height>
                <label>[B]Title[/B]</label>
                <textcolor>ffffffff</textcolor>
                <font>font16</font>
            </control>

            <control type="textbox" id="6003">
                <description>Program description</description>
                <posx>20</posx>
                <posy>120</posy>
                <width>900</width>
                <height>540</height>
                <label>Description</label>
                <textcolor>ffffffff</textcolor>
                <font>font16</font>
                <wrapmultiline>true</wrapmultiline>
                <autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
            </control>

            <control type="image" id="6004">
                <description>Program snap</description>
                <posx>960</posx>
                <posy>120</posy>
                <width>300</width>
                <height>200</height>
                <aspectratio>keep</aspectratio>
            </control>
            <control type="label" id="6002">
                <description>Program time</description>
                <posx>960</posx>
                <posy>340</posy>
                <width>300</width>
                <height>50</height>
                <label>[B]18:00 - 20:00[/B]</label>
                <textcolor>ffffffff</textcolor>
                <font>font13</font>
                <align>center</align>
                <aligny>center</aligny>
            </control>
            <control type="label" id="6005">
                <description>Program channel</description>
                <posx>960</posx>
                <posy>390</posy>
                <width>300</width>
                <height>50</height>
                <label>Program channel</label>
                <textcolor>ffffffff</textcolor>
                <font>font13</font>
                <align>center</align>
                <aligny>center</aligny>
            </control>

    </controls>
</window>
